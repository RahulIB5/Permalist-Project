<%- include('partials/header.ejs'); -%>
  
  <!-- New List Form -->
  <div class="box" id="heading">
    <form action="/lists" method="POST">
      <input type="text" name="listName" placeholder="New List Name" required>
      <button type="submit">+</button>
    </form>
  </div>

  <!-- Existing Lists -->
   <div class="box">
  <ul>
    <% if (locals.lists && locals.lists.length > 0) { %>
      <% lists.forEach(list => { %>
        <li>
          <a style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ; font-size: 25px; text-decoration: none; padding: 15px; display: flex; align-items: last baseline;" id="title<%= list.id %>" href="/lists/<%= list.id %>"><%= list.name %></a>
        </li>
      <% }); %>
    <% } else { %>
      <li>No lists found. Create one above!</li>
    <% } %>
  </ul>
  </div>

<%- include('partials/footer.ejs'); -%>  